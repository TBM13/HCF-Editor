<UserControl x:Class="HCF_Editor.UI.ValueEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCF_Editor.UI"
             mc:Ignorable="d" 
             d:DesignHeight="31" d:DesignWidth="800">
    <Grid Background="White" x:Name="Grid">
        <Rectangle Stroke="DarkGray" StrokeThickness="0.3"/>
        <Label x:Name="Label" HorizontalAlignment="Left" Width="0" Margin="0,0,0,0" VerticalContentAlignment="Center"/>
        <TextBox x:Name="ValueTextbox" Margin="5,5,60,5" TextChanged="ValueTextbox_TextChanged" ToolTip="Unknown Type" IsEnabled="False"/>
        <Button x:Name="SaveButton" Content="Save" Margin="0,5,5,5" Click="SaveButton_Click" IsEnabled="False" HorizontalAlignment="Right" Width="50"/>
    </Grid>
</UserControl>
