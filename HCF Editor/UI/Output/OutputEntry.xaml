<UserControl x:Class="HCF_Editor.UI.Output.OutputEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCF_Editor.UI.Output"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid Background="GhostWhite">
        <Ellipse x:Name="IconEllipse" 
                 Width="16" Height="16" 
                 Fill="LightSeaGreen" 
                 HorizontalAlignment="Left" Margin="5,0,0,0"/>

        <Label x:Name="IconLabel" 
               Content="!" 
               FontSize="10" FontWeight="Bold" Foreground="White"
               HorizontalAlignment="Left" VerticalContentAlignment="Center" 
               Margin="6.5,-1,0,0" 
               Width="16"/>

        <Label x:Name="MessageLabel" 
               Content="Message" FontSize="11"
               Margin="24,0,0,0"/>
    </Grid>
</UserControl>
