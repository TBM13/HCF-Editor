<UserControl x:Class="HCF_Editor.UI.Output.OutputViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HCF_Editor.UI.Output"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel Background="WhiteSmoke" x:Name="MainStackPanel">
            <Button ToolTip="Close" 
                    Width="14" Height="14"
                    Style="{StaticResource CloseItemCommandButtonStyle}" 
                    HorizontalAlignment="Left" Margin="5"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
